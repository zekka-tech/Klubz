{
  "name": "klubz-webapp",
  "type": "module",
  "version": "2.0.0",
  "description": "Enterprise-grade carpooling platform with POPIA/GDPR compliance",
  "scripts": {
    "dev": "vite",
    "dev:cloudflare": "wrangler pages dev dist --ip 0.0.0.0 --port 3000",
    "build": "vite build",
    "build:prod": "NODE_ENV=production vite build",
    "preview": "wrangler pages dev dist --ip 0.0.0.0 --port 3000",
    "deploy": "npm run build && wrangler pages deploy",
    "deploy:prod": "npm run build:prod && wrangler pages deploy --project-name klubz-production",
    "cf-typegen": "wrangler types --env-interface CloudflareBindings",
    "lint": "echo 'Linting...'",
    "test": "echo 'Running tests...'",
    "test:unit": "echo 'Unit tests...'",
    "test:e2e": "echo 'E2E tests...'",
    "clean": "rm -rf dist .wrangler",
    "type-check": "echo 'Type checking...'",
    "start": "pm2 start ecosystem.config.cjs",
    "stop": "pm2 stop klubz-webapp",
    "restart": "pm2 restart klubz-webapp",
    "logs": "pm2 logs klubz-webapp --nostream"
  },
  "dependencies": {
    "hono": "^4.11.5",
    "jose": "^5.2.0",
    "zod": "^3.22.4",
    "bcryptjs": "^2.4.3",
    "crypto-js": "^4.2.0",
    "qrcode": "^1.5.3",
    "speakeasy": "^2.0.0",
    "twilio": "^4.23.0",
    "stripe": "^14.18.0",
    "winston": "^3.11.0",
    "dayjs": "^1.11.10",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@hono/vite-build": "^1.2.0",
    "@hono/vite-dev-server": "^0.18.2",
    "vite": "^6.3.5",
    "wrangler": "^4.4.0",
    "typescript": "^5.3.3",
    "@types/node": "^20.11.0",
    "@types/bcryptjs": "^2.4.6",
    "@types/crypto-js": "^4.2.1",
    "@types/qrcode": "^1.5.5",
    "@types/speakeasy": "^2.0.10",
    "@types/uuid": "^9.0.7",
    "vitest": "^1.2.0",
    "@playwright/test": "^1.40.0",
    "eslint": "^8.56.0",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}