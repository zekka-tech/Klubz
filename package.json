{
  "name": "klubz-webapp",
  "version": "2.0.0",
  "description": "Enterprise-grade carpooling platform with POPIA/GDPR compliance",
  "type": "module",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "scripts": {
    "dev": "vite",
    "dev:cloudflare": "wrangler pages dev dist --ip 0.0.0.0 --port 3000",
    "build": "vite build",
    "build:prod": "NODE_ENV=production vite build",
    "preview": "wrangler pages dev dist",
    "deploy": "npm run build && wrangler pages deploy dist",
    "deploy:prod": "npm run build:prod && wrangler pages deploy dist --project-name klubz-production",
    "deploy:staging": "npm run build && wrangler pages deploy dist --project-name klubz-staging",
    "cf-typegen": "wrangler types --env-interface CloudflareBindings",
    "lint": "eslint src --ext .ts,.tsx",
    "lint:fix": "eslint src --ext .ts,.tsx --fix",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:unit": "vitest run tests/unit",
    "test:integration": "vitest run tests/integration",
    "test:e2e": "npm run test:ui-contracts && playwright test -c playwright.config.ts",
    "test:ui-contracts": "node tests/ui-contracts.js",
    "test:load": "node tests/performance-test.js",
    "test:security": "node tests/security-audit.js",
    "test:all": "npm run test:unit && npm run test:integration && npm run test:security && npm run test:load",
    "verify": "npm run type-check && npm run lint && npm test && npm run build",
    "verify:ci": "npm run db:check-migrations && npm run db:smoke && npm run verify",
    "clean": "rm -rf dist .wrangler",
    "type-check": "tsc --noEmit",
    "start": "pm2 start ecosystem.config.cjs",
    "stop": "pm2 stop all",
    "restart": "pm2 restart all",
    "logs": "pm2 logs --nostream",
    "db:migrate": "wrangler d1 migrations apply klubz-db-prod",
    "db:migrate:local": "wrangler d1 migrations apply klubz-db-prod --local",
    "db:check-migrations": "node scripts/check-migration-order.js",
    "db:smoke": "bash scripts/db-smoke.sh klubz-db-prod",
    "db:seed": "wrangler d1 execute klubz-db-prod --file=./migrations/0002_sample_data.sql",
    "db:reset": "rm -rf .wrangler/state/v3/d1 && npm run db:migrate:local && npm run db:seed"
  },
  "dependencies": {
    "@openai/codex": "^0.101.0",
    "@sendgrid/mail": "^8.1.6",
    "bcryptjs": "^2.4.3",
    "hono": "^4.11.5",
    "qrcode": "^1.5.3",
    "speakeasy": "^2.0.0",
    "stripe": "^14.25.0",
    "twilio": "^4.23.0",
    "winston": "^3.11.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@axe-core/playwright": "^4.11.1",
    "@hono/vite-build": "^1.2.0",
    "@hono/vite-dev-server": "^0.18.2",
    "@playwright/test": "^1.40.0",
    "@types/bcryptjs": "^2.4.6",
    "@types/crypto-js": "^4.2.1",
    "@types/node": "^20.11.0",
    "@types/qrcode": "^1.5.5",
    "@types/speakeasy": "^2.0.10",
    "@types/uuid": "^9.0.7",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "eslint": "^8.56.0",
    "typescript": "^5.3.3",
    "vite": "^6.3.5",
    "vitest": "^1.2.0",
    "wrangler": "^4.4.0"
  },
  "keywords": [
    "carpooling",
    "ridesharing",
    "cloudflare",
    "hono",
    "poopia",
    "gdpr",
    "enterprise"
  ],
  "author": "Klubz Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/zekka-tech/Klubz.git"
  },
  "bugs": {
    "url": "https://github.com/zekka-tech/Klubz/issues"
  },
  "homepage": "https://klubz-production.pages.dev"
}
