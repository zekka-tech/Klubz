# Klubz Environment Variables
# Copy this to .dev.vars for local development or set as secrets for production

# JWT Configuration
JWT_SECRET=your-super-secure-jwt-secret-key-at-least-256-bits
JWT_EXPIRES_IN=24h

# Encryption Keys (AES-256-GCM)
ENCRYPTION_KEY=your-32-byte-encryption-key-for-aes-256-gcm

# Database Configuration
DATABASE_URL=your-database-connection-string

# SMS/Twilio Configuration (for MFA)
SMS_API_KEY=your-twilio-api-key
SMS_API_SECRET=your-twilio-api-secret
SMS_FROM_NUMBER=+1234567890

# Admin Configuration
ADMIN_EMAIL=admin@klubz.com
ADMIN_PHONE=+1234567890

# Rate Limiting
RATE_LIMIT_WINDOW=1
RATE_LIMIT_MAX=100

# Session Configuration
SESSION_SECRET=your-session-secret-key
SESSION_DURATION_HOURS=24

# Security
CORS_ORIGIN=https://your-domain.com
TRUST_PROXY=true

# Monitoring
SENTRY_DSN=your-sentry-dsn-url
LOG_LEVEL=info

# External Services
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_stripe_webhook_secret

# Data Retention (GDPR/POPIA compliance)
DATA_RETENTION_DAYS=365
AUDIT_LOG_RETENTION_DAYS=2555

# Performance
CACHE_TTL=3600
MAX_TRIPS_PER_USER=10

# Development
NODE_ENV=development
PORT=3000